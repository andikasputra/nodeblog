<%- include('partials/header') %>
<div class="container-fluid">
	<div class="row fh5co-post-entry">
		<% posts.map(post => { %>
			<article class="col-lg-3 col-md-3 col-sm-3 col-xs-6 col-xxs-12 animate-box">
				<figure>
					<a href="/post/<%= post.dataValues.slug %>"><img src="/image/<%= post.dataValues.image %>" alt="Image" class="img-responsive"></a>
				</figure>
				<span class="fh5co-meta"><a href="/post/<%= (category) ? category.slug : post.dataValues.Category.slug %>"><%= (category) ? category.name : post.dataValues.Category.dataValues.name %></a></span>
				<h2 class="fh5co-article-title"><a href="/post/<%= post.dataValues.slug %>"><%= post.dataValues.title %></a></h2>
				<span class="fh5co-meta fh5co-date">March 6th, 2016</span>
			</article>
		<% }) %>
		
		<div class="clearfix visible-lg-block visible-md-block visible-sm-block visible-xs-block"></div>

		<div class="clearfix visible-xs-block"></div>
	</div>
</div>
<%- include('partials/footer') %>